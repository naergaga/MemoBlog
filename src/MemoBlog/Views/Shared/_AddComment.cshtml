@model Comment

<div id="CommentAdd">
    <form asp-action="Add" asp-controller="Comment" method="post">
        <input type="hidden" asp-for="PostId"/>
        <input type="hidden" asp-for="Pid" />
        <div class="emotionToolbar">
            <span class="emotionTool">
                <img src="~/images/emoji/1f600.png" />
            </span>
        </div>
        <textarea asp-for="Content" class="form-control emAdd"></textarea>
        <button type="submit" class="btn btn-default">提交</button>
    </form>
</div>